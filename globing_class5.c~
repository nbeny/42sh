#include "globing.h"

t_new   *class_space_posix_dup(t_new *s_izi)
{
    s_izi = sb_ascii_posdup(s_izi, ' ', ' ');
    s_izi = sb_ascii_posdup(s_izi, '\t', '\t');
    s_izi = sb_ascii_posdup(s_izi, '\r', '\r');
    s_izi = sb_ascii_posdup(s_izi, '\n', '\n');
    s_izi = sb_ascii_posdup(s_izi, '\v', '\v');
    s_izi = sb_ascii_posdup(s_izi, '\f', '\f');
    return (s_izi);
}

t_new   *class_upper_posix(t_new *s_izi)
{
    s_izi = sb_ascii_posdup(s_izi, 'A', 'Z');
    return (s_izi);
}

t_new   *class_word_posix(t_new *s_izi)
{
    s_izi = sb_ascii_posjoin(s, '_', '_', s_izi);
    s_izi = sb_ascii_posjoin(s, 'a', 'z', s_izi);
    s_izi = sb_ascii_posjoin(s, 'A', 'Z', s_izi);
    s_izi = sb_ascii_posjoin(s, '0', '9', s_izi);
    return (s_izi);
}

t_new   *class_xdigit_posix(t_new *s_izi)
{
    s_izi = sb_ascii_posjoin(s, 'A', 'F', s_izi);
    s_izi = sb_ascii_posjoin(s, 'a', 'f', s_izi);
    s_izi = sb_ascii_posjoin(s, '0', '9', s_izi);
    return (s_izi);
}
